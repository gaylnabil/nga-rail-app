<%= form_with(url: login_path) do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger mt-4" role="alert">
      <ul>
          <li><%= flash[:alert] %></li>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :email, class:"form-label" %>
    <%= form.text_field :email, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class:"form-label" %>
    <%= form.password_field :password, required: true, class: "form-control" %>
    <%= link_to "Forgot your password ?", reset_password_path, class: "btn btn-link" %>
  </div>

  <div class="mb-3">
    <%= form.submit value: "Login", class: "btn btn-primary" %>
  </div>

<% end %>
